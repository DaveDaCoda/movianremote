<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/horizontal_center_layout">

    <com.claha.movianremote.widget.MovianRemoteButton
        style="@style/showtime_button"
        android:src="@drawable/ic_action_playqueue"
        app:action="Playqueue" />

    <com.claha.movianremote.widget.MovianRemoteButton
        style="@style/showtime_button"
        android:src="@drawable/ic_action_media_stats"
        app:action="MediaStats"
        app:actionLong="LogWindow" />

    <com.claha.movianremote.widget.MovianRemoteButton
        style="@style/showtime_button"
        android:src="@drawable/ic_action_audio_track"
        app:action="AudioTrack" />

    <com.claha.movianremote.widget.MovianRemoteButton
        style="@style/showtime_button"
        android:src="@drawable/ic_action_subtitle_track"
        app:action="SubtitleTrack" />

</LinearLayout>