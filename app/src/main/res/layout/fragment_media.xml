<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/vertical_center_layout"
        android:layout_above="@+id/viewPager">

        <LinearLayout style="@style/horizontal_center_layout">

            <com.claha.showtimeremote.ShowtimeButton
                style="@style/showtime_button"
                android:src="@drawable/ic_action_volume_down"
                app:action="VolumeDown" />

            <com.claha.showtimeremote.ShowtimeToggleButton
                android:id="@+id/muteToggle"
                style="@style/showtime_button"
                android:src="@drawable/ic_action_volume_mute"
                app:action="VolumeMuteToggle"
                app:src2="@drawable/ic_action_volume_off" />

            <com.claha.showtimeremote.ShowtimeButton
                style="@style/showtime_button"
                android:src="@drawable/ic_action_volume_up"
                app:action="VolumeUp" />

        </LinearLayout>

        <LinearLayout style="@style/horizontal_center_layout">

            <com.claha.showtimeremote.ShowtimeButton
                style="@style/showtime_button"
                android:src="@drawable/ic_action_skip_previous"
                app:action="PreviousTrack" />

            <com.claha.showtimeremote.ShowtimeButton
                style="@style/showtime_button"
                android:src="@drawable/ic_action_skip_next"
                app:action="NextTrack" />

        </LinearLayout>

        <LinearLayout style="@style/horizontal_center_layout">

            <com.claha.showtimeremote.ShowtimeButton
                style="@style/showtime_button"
                android:src="@drawable/ic_action_fast_rewind"
                app:action="SeekReverse" />

            <com.claha.showtimeremote.ShowtimeButton
                style="@style/showtime_button"
                android:src="@drawable/ic_action_stop"
                app:action="Stop" />

            <com.claha.showtimeremote.ShowtimeToggleButton
                android:id="@+id/playPause"
                style="@style/showtime_button"
                android:src="@drawable/ic_action_play"
                app:action="PlayPause"
                app:src2="@drawable/ic_action_pause" />

            <com.claha.showtimeremote.ShowtimeButton
                style="@style/showtime_button"
                android:src="@drawable/ic_action_fast_forward"
                app:action="SeekForward" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_bottom_view_pager" />

</RelativeLayout>