<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Profiles">

        <ListPreference
            android:dialogTitle=""
            android:key="@string/settings_profiles_choose_key"
            android:shouldDisableView="true"
            android:summary="@string/settings_profiles_choose_summary"
            android:title="@string/settings_profiles_choose_title" />

        <EditTextPreference
            android:dialogTitle=""
            android:hint="@string/settings_profiles_add_hint"
            android:imeOptions="actionDone"
            android:key="@string/settings_profiles_add_key"
            android:singleLine="true"
            android:summary="@string/settings_profiles_add_summary"
            android:title="@string/settings_profiles_add_title" />

        <ListPreference
            android:dialogTitle=""
            android:key="@string/settings_profiles_delete_key"
            android:shouldDisableView="true"
            android:summary="@string/settings_profiles_delete_summary"
            android:title="@string/settings_profiles_delete_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Network">

        <EditTextPreference
            android:defaultValue="@string/settings_ipAddress_defaultValue"
            android:dialogTitle=""
            android:digits="0123456789."
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:key="@string/settings_ipAddress_key"
            android:singleLine="true"
            android:summary="@string/settings_ipAddress_summary"
            android:title="@string/settings_ipAddress_title" />

        <EditTextPreference
            android:defaultValue="@string/settings_port_defaultValue"
            android:dialogTitle=""
            android:imeOptions="actionDone"
            android:inputType="number"
            android:key="@string/settings_port_key"
            android:singleLine="true"
            android:summary="@string/settings_port_summary"
            android:title="@string/settings_port_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Miscellaneous">

        <ListPreference
            android:defaultValue="0"
            android:dialogTitle=""
            android:entries="@array/settings_misc_start_page_entries"
            android:entryValues="@array/settings_misc_start_page_entryValues"
            android:key="@string/settings_misc_start_page_key"
            android:summary="@string/settings_misc_start_page_summary"
            android:title="@string/settings_misc_start_page_title" />

    </PreferenceCategory>


</PreferenceScreen>